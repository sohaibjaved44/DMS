        <dt>
            File Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FILE_NME)
        </dd>

        @*<dt>
            Extension
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EXTN)
        </dd>*@

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FRST_NME)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LAST_NME)
        </dd>

        <dt>
            Path
        </dt>

        <dd>
            @Html.DisplayFor(model => model.STRG_LOC)
        </dd>

        <dt>
            Document Note
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DCMT_NTE)
        </dd>

    </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
